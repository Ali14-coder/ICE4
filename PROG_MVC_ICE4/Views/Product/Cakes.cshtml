@model List<PROG_MVC_ICE4.Models.Product>

@{
    ViewData["Title"] = "Cakes";
}

<div class="container py-5">
    <h2 class="text-center mb-5" style="font-family: 'Cursive'; color: #d2691e;">🎂 Our Cakes</h2>

    <div class="row row-cols-1 row-cols-md-2 g-4">

        <div class="col">
            <div class="card border-0 shadow-none h-100">
                <img src="~/images/blackforestcake.jpg" class="card-img-top" alt="Black Forest Cake" style="height: 250px; object-fit: contain;">
                <div class="card-body">
                    <h5 class="card-title text-center">Black Forest Cake</h5>
                    <p class="card-text"><strong>Price:</strong> R150.00</p>
                    <p class="card-text"><strong>Type:</strong> Cake</p>
                    <p class="card-text">Rich chocolate sponge layered with whipped cream and cherries.</p>
                    <button type="submit" class="btn btn-warning w-30 fw-bold"> Add to basket</button>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card border-0 shadow-none h-100">
                <img src="~/images/redvelvetcake.jpg" class="card-img-top" alt="Red Velvet Cake" style="height: 250px; object-fit: contain;">
                <div class="card-body">
                    <h5 class="card-title text-center">Red Velvet Cake</h5>
                    <p class="card-text"><strong>Price:</strong> R135.00</p>
                    <p class="card-text"><strong>Type:</strong> Cake</p>
                    <p class="card-text">Soft red sponge layered with cream cheese frosting.</p>
                    <button type="submit" class="btn btn-warning w-30 fw-bold"> Add to basket</button>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card border-0 shadow-none h-100">
                <img src="~/images/carrotcake.jpg" class="card-img-top" alt="Carrot Cake" style="height: 250px; object-fit: contain;">
                <div class="card-body">
                    <h5 class="card-title text-center">Carrot Cake</h5>
                    <p class="card-text"><strong>Price:</strong> R120.00</p>
                    <p class="card-text"><strong>Type:</strong> Cake</p>
                    <p class="card-text">Moist cake with grated carrots, nuts, and cinnamon spice.</p>
                    <button type="submit" class="btn btn-warning w-30 fw-bold"> Add to basket</button>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card border-0 shadow-none h-100">
                <img src="~/images/vanillacake.jpg" class="card-img-top" alt="Vanilla Sponge" style="height: 250px; object-fit: contain;">
                <div class="card-body">
                    <h5 class="card-title text-center">Vanilla Sponge</h5>
                    <p class="card-text"><strong>Price:</strong> R100.00</p>
                    <p class="card-text"><strong>Type:</strong> Cake</p>
                    <p class="card-text">Classic vanilla sponge with light buttercream frosting.</p>
                    <button type="submit" class="btn btn-warning w-30 fw-bold"> Add to basket</button>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card border-0 shadow-none h-100">
                <img src="~/images/cheesecake.jpg" class="card-img-top" alt="Cheesecake" style="height: 250px; object-fit: contain;">
                <div class="card-body">
                    <h5 class="card-title text-center">Cheesecake</h5>
                    <p class="card-text"><strong>Price:</strong> R140.00</p>
                    <p class="card-text"><strong>Type:</strong> Cake</p>
                    <p class="card-text">Creamy baked cheesecake with a buttery biscuit base.</p>
                    <button type="submit" class="btn btn-warning w-30 fw-bold"> Add to basket</button>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card border-0 shadow-none h-100">
                <img src="~/images/choccake.jpg" class="card-img-top" alt="Chocolate Fudge" style="height: 250px; object-fit: contain;">
                <div class="card-body">
                    <h5 class="card-title text-center">Chocolate Fudge</h5>
                    <p class="card-text"><strong>Price:</strong> R160.00</p>
                    <p class="card-text"><strong>Type:</strong> Cake</p>
                    <p class="card-text">Dense, rich chocolate cake with dark fudge icing.</p>
                    <button type="submit" class="btn btn-warning w-30 fw-bold"> Add to basket</button>
                </div>
            </div>
        </div>

    </div>
</div>

